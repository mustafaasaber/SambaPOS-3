<Window x:Class="Samba.Presentation.Controls.Interaction.SplashScreenForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="421"
        Height="156"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        Topmost="False"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">

    <Grid>
        <Border Background="DarkSlateGray"
                BorderBrush="WhiteSmoke"
                BorderThickness="3"
                CornerRadius="5">
            <Image Name="image1"
                   Width="366"
                   Height="71"
                   Margin="10,10,10,10"
                   Source="/Samba.Presentation.Controls;component/Images/logo.png"
                   Stretch="None" />
        </Border>
    </Grid>
    <Window.Background>
        <SolidColorBrush />
    </Window.Background>
</Window>
